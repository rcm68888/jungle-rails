<h1>Signup!</h1>

<%= form_for :user, url: '/users' do |f| %>

  <div class="form-group <% if f.object&.errors&.present? %> has-error <% end %>">
  <%= label_tag :first_name, 'First Name' %>
  <%= f.text_field :first_name, class: 'form-control', placeholder: 'First Name' %>
  <%# Display validation error for :first_name if it exists %>
  <% if f.object&.errors&.present? %>
    <div class="help-block"><%= f.object.errors.full_messages_for(:first_name).first %></div>
  <% end %>
</div>

  <div class="form-group">
    <%= label_tag :last_name, 'Last Name' %>
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last Name' %>
  </div>

  <div class="form-group">
    <%= label_tag :email, 'Email' %>
    <%= f.text_field :email, class: 'form-control', placeholder: 'Email' %>
  </div>

  <div class="form-group">
    <%= label_tag :password, 'Password' %>
    <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
  </div>

  <div class="form-group">
    <%= label_tag :password_confirmation, 'Password Confirmation' %>
    <%= f.password_field :password_confirmation, class: 'form-control', placeholder: 'Password Confirmation' %>
  </div>

  <%= f.submit "Submit" %>
<% end %>